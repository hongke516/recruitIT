<!--pages/projectHistory/projectHistory.wxml-->
<view class='projectHistoryWrap'>
  <view class='hallRowWrap'>
    <view class='hallRow'>
      <view class='leftName'>项目名称</view>
      <input class='rightInput' placeholder='请输入项目名称'></input>
    </view>
    <view class='hallRow'>
      <view class='leftName'>你的职责</view>
      <input class='rightInput' placeholder='请输入你的职责'></input>
    </view>
    <view class='hallRow'>
      <view class='leftName'>开始时间</view>
      <picker bindchange="startTimeChange" mode="date">
        <input class='rightInput' placeholder="请选择" value='{{ startTime }}' disabled/>
      </picker>
      <image class='arrowR' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/arrowR.png'></image>
    </view>
    <view class='hallRow'>
      <view class='leftName'>结束时间</view>
      <picker bindchange="endTimeChange" mode="date">
        <input class='rightInput' placeholder="请选择" value='{{ endTime }}' disabled/>
      </picker>
      <image class='arrowR' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/arrowR.png'></image>
    </view>
  </view> 
  <view class='workContent'>
    <view class='title'>项目内容</view>
    <view class='textareaWrap'>
        <textarea maxlength="1000" bindinput="iptChange" class='textareaBox' placeholder="请输入项目内容" />
    </view>
  </view>
  <view class='bottomBtn'>保存</view>
  <view class='delBtn'>删除此项目经历</view>
</view> 


