/* pages/recharge/recharge.wxss */
.rechargeWrap{
  padding: 0 30rpx;
}
.rechargeWrap .topBox{
  padding: 30rpx 18rpx 0;
}
.rechargeWrap .title{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
	color: #333;
  border-left: 6rpx solid #2e70f9;
  padding-left: 12rpx;
}
.rechargeWrap .topBox .itemBoxRow{
  height: 131rpx;
  padding-top: 30rpx;
}
.rechargeWrap .topBox .itemBoxRow .itemBox{
	width: 310rpx;
	height: 128rpx;
	border-radius: 10rpx;
	border: solid 3rpx #dfdfdf;
  color: #595959;
  text-align: center;
}
.rechargeWrap .topBox .itemBoxRow .itemBox.active{
	color: #2e70f9;
	border: solid 3rpx #2e70f9;
}
.rechargeWrap .topBox .itemBoxRow .itemBox .firstText{
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	line-height: 36rpx;
  padding-top: 30rpx;
}
.rechargeWrap .topBox .itemBoxRow .itemBox .secondText{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	line-height: 24rpx;
  padding-top: 10rpx;
}