        <view class='threeRow'>最近活跃：9小时前</view>
      </view>
    </view>
    <view class='bottomRow'>
      <view class='yoaqingBtn'>录用</view>
      <view class='bottomBtn'>放弃</view>
    </view>
  </view>
  <view class='itemWrap' wx:if="{{ topType === 'four' }}">
    <view class='itemBox'>
      <view class='leftImg'>
        <image class='touxiang' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/touxiang.png'></image>
      </view>
      <view class='rightText'>
