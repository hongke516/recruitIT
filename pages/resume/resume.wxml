<!--pages/resume/resume.wxml-->
<view class='resumeWrap'>
  <view class='topBtnWrpa'>
    <view class='{{ topType === "one" ? "active" : "" }}' bindtap='chooseType' data-id='one'>待查看</view>
    <view class='{{ topType === "two" ? "active" : "" }}' bindtap='chooseType' data-id='two'>待沟通</view>
    <view class='{{ topType === "three" ? "active" : "" }}' bindtap='chooseType' data-id='three'>面试</view>
    <view class='{{ topType === "four" ? "active" : "" }}' bindtap='chooseType' data-id='four'>不合适</view>
  </view>
  <view class='itemWrap' wx:if="{{ topType === 'one' }}">
    <view class='itemBox'>
      <view class='leftImg'>
        <image class='touxiang' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/touxiang.png'></image>
      </view>
      <view class='rightText'>
        <view class='firstRow'>
          <text class='mosaic nameText'>王大伟</text>
          <text class='typeName'>高级UI设计师</text>
        </view>
        <view class='secondRow'>
          <text>三年</text>
          <text class='line'>|</text>
          <text>本科</text>
          <text class='line'>|</text>
          <text>10k-14k</text>
        </view>
        <view class='threeRow'>最近活跃：9小时前</view>
      </view>
    </view>
    <view class='bottomRow'>
      <view class='bottomBtn'>放弃</view>
    </view>
  </view>
  <view class='itemWrap' wx:if="{{ topType === 'two' }}">
    <view class='itemBox'>
      <view class='leftImg'>
        <image class='touxiang' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/touxiang.png'></image>
      </view>
      <view class='rightText'>
        <view class='firstRow'>
          <text class='nameText'>王大伟</text>
          <text class='typeName'>高级UI设计师</text>
        </view>
        <view class='secondRow'>
          <text>三年</text>
          <text class='line'>|</text>
          <text>本科</text>
          <text class='line'>|</text>
          <text>10k-14k</text>
        </view>
        <view class='threeRow'>最近活跃：9小时前</view>
      </view>
    </view>
    <view class='bottomRow'>
      <view class='yoaqingBtn' bindtap='goInvite'>邀请面试</view>
      <view class='bottomBtn'>放弃</view>
    </view>
  </view>
  <view class='itemWrap' wx:if="{{ topType === 'three' }}">
    <view class='itemBox'>
      <view class='leftImg'>
        <image class='touxiang' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/touxiang.png'></image>
      </view>
      <view class='rightText'>
        <view class='firstRow'>
          <text class='nameText'>王大伟</text>
          <text class='typeName'>高级UI设计师</text>
        </view>
        <view class='secondRow'>
          <text>三年</text>
          <text class='line'>|</text>
          <text>本科</text>
          <text class='line'>|</text>
          <text>10k-14k</text>
