          <text>10k-14k</text>
        </view>
        <view class='threeRow'>最近活跃：9小时前</view>
      </view>
    </view>
    <view class='bottomRow'>
      <view class='yoaqingBtn' bindtap='goInvite'>再邀面</view>
      <view class='bottomBtn'>删除</view>
    </view>
  </view>
</view>
