
/* pages/index/index.wxss */
page{
  height: 100%;
}
.indexWrap{
  height: 100%;
  background: #fff;
}
.indexWrap .authMask{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0);
  z-index: 99
}
.indexWrap .homeTitle{
  text-align: center;
  font-size: 36rpx;
  padding: 20rpx 0;
	font-family: PingFangSC-Regular;
}
.indexWrap .chooseOneWrap{
  text-align: center;
  padding: 40rpx 0;
}
.indexWrap .chooseOneWrap .chooseOne{
  width: 228rpx;
  height: 315rpx;
}
.indexWrap .chooseTwoWrap{
  text-align: center;
  padding: 70rpx 0 40rpx;
}
.indexWrap .chooseTwoWrap .chooseTwo{
  width: 264rpx;
  height: 357rpx;
}
.indexWrap .homeBtn{
  width: 200rpx;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #4c85fb;
	box-shadow: 0px 4px 13px 0px rgba(26, 73, 210, 0.34);
	border-radius: 4px;
  margin:  auto;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
  color: #fff;
  text-align: center;
}
/* 不授权弹框 */
.indexWrap .noAuthWrap{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 9999
}
.indexWrap .noAuthWrap .noAuthBox{
  width: 600rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
}
.indexWrap .noAuthWrap .noAuthBox .titleNo{
  text-align: center;
	font-family: PingFangSC-Medium;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333;
  padding: 30rpx 0;
}
.indexWrap .noAuthWrap .noAuthBox .content{
	font-family: PingFangSC-Regular;
  text-align: center;
  font-size: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  color: #999;
  padding-bottom: 30rpx;
}
.indexWrap .noAuthWrap .noAuthBox .bottomBtn{
  border-top: 1rpx solid #ddd;
  height: 90rpx;
  line-height: 90rpx;
}
.indexWrap .noAuthWrap .noAuthBox .bottomBtn .leftBtn{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  border-right: 1rpx solid #ddd;
  color: #666;
  box-sizing: border-box;
  text-align: center;
  font-size: 26rpx;
}
.indexWrap .noAuthWrap .noAuthBox .bottomBtn .rightBtn{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  color: #2d8cf0;
  text-align: center;
  font-size: 26rpx;
  background: #fff;
}