/* 底部导航 */
.btootmNavWrap{
	height: 98rpx;
	background-color: #ffffff;
	box-shadow: 0px 2px 20px 0px rgba(224, 223, 223, 0.5);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-family: PingFangSC-Regular;
	font-size: 22rpx;
	line-height: 24rpx;
	color: #999;
}
.btootmNavWrap .btnBox{
  width: 20%;
  float: left;
  height: 98rpx;
  text-align: center;
  position: relative;
}
.btootmNavWrap .btnBox .imgBox{
  height: 55rpx;
  padding-top: 10rpx;
}
.btootmNavWrap .btnBox.active{
  color: #333;
}
.btootmNavWrap .btnBox .homePng{
  width: 43rpx;
  height: 40rpx; 
}
.btootmNavWrap .btnBox .shangjin{
  width: 35rpx;
  height: 40rpx; 
}
.btootmNavWrap .btnBox .addfabu{
  width: 114rpx;
  height: 114rpx;
  position: absolute;
  left: 18rpx;
  top: -50rpx;
}
.btootmNavWrap .btnBox .luntan{
  width: 37rpx;
  height: 33rpx; 
  padding-top: 6rpx;
}
.btootmNavWrap .btnBox .my{
  width: 34rpx;
  height: 39rpx; 
}
/* 发布遮罩 */
.releaseWrap{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  z-index: 999
}
.releaseWrap .iconBox{
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 200rpx;
  height: 200rpx;
  left: 30rpx;
  right: 30rpx;
}
.releaseWrap .iconBox .iconCol{
  width: 180rpx;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #333;
}
.releaseWrap .iconBox .iconCol .fabuTiezi{
  width: 152rpx;
  height: 152rpx;
}
.releaseWrap .bottomClose{
  text-align:  center;
  position: absolute;
  left: 0;
  bottom: 44rpx;
  height: 114rpx;
  right: 0;
}
.releaseWrap .bottomClose .bottomCloseIcon{
  width: 114rpx;
  height: 114rpx
}
.mosaic {
  color: transparent!important;
  text-shadow: 0 0 10px rgba(0,0,0,0.5)!important;
}
.fl{
  float: left;
}
.fr{
  float: right;
}